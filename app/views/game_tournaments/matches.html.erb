<style>
    p {
        font-size: 10px !important;
    }

    div {
        padding: 2px !important;
        line-height: 0px !important;
    }
</style>


<p id="notice"><%= notice %></p>

<h3>tournament Matches</h3>

<div class="row">
  <div class="col col-md-6">
    <h5>Group A Matches</h5>
    <% @groupa_matches.each do |match| %>
      <div class="row">
        <div class="col col-md-6">
          <p><img src="<%= match[:team_a].image %>" width='15px' height='12px'/>  <%= match[:team_a].name %> </p>
        </div>
        <div class="col col-md-6">
          <p> <%= match[:team_a_score] %></p>
        </div>
      </div>

      <div class="row">
        <div class="col col-md-6">
          <p><img src="<%= match[:team_b].image %>" width='15px' height='12px'/>  <%= match[:team_b].name %> </p>
        </div>
        <div class="col col-md-6">
          <p> <%= match[:team_b_score] %></p>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
  <div class="col col-md-6">
    <h5>Group B Matches</h5>
    <% @groupb_matches.each do |match| %>
      <div class="row">
        <div class="col col-md-6">
